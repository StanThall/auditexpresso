<% @title="Les Indiscrétions" %>
<% content_for :head do %>
  <meta property="og:description" content="Les infos (officielles ou pas) sur ce qu'il se passe dans les cabinets.">
<% end %>
<p class="lead" style="text-align: center;font-weight: bold;margin-bottom:5px;font-size: 2em;">
  <%= content_tag(:i,"",class: "fa fa-user-secret") %>
  Indiscrétions
</p>
<hr class="line_main" style="margin: 5px 0px;">

<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <% @strips.each do |s| %>
    <div class="panel panel-default" id="panel-strip">
      <a data-toggle="collapse" data-parent="#accordion" href="#collapse_<%= s.id %>" >
        <div class="panel-heading" role="tab" id="heading_<%= s.id %>" >
          <div class="panel-title">
            <%= s.title %>
          </div>
        </div>
      </a>
      <div id="collapse_<%= s.id %>" class="panel-collapse collapse" role="tabpanel">
        <div class="panel-body">
          <%= raw(s.content) %>
          <%= render "application/strip_footer" %>
        </div>
      </div>
    </div>
  <% end %>
</div>