<%= form_tag({controller: "strips", action: "collect", method: "put", class: "nifty_form"}) %>

	<% if flash[:notice].present? %>
		<div class="alert alert-success alert-dismissible" role="alert" style="text-align:center;padding: 5px 0px 5px 0px;"><button type="button" class="close" data-dismiss="alert" aria-label="Close" style="right:5%;"><span aria-hidden="true">&times;</span></button><%= flash[:notice] %></div>
	<% end %>

	<div class="field">
		<%= text_area_tag :content %>
	</div> 

	<div class="actions">
		<%= submit_tag "Go!" %>
	</div>
