<%= form_tag({controller: "blog_posts", action: "comment_collect", method: "put", class: "nifty_form"},class: "collapse", id: "comment_form", remote: true) %>
	<div id ="comment_howto">
		<p>Vous pouvez aussi nous écrire à <span class="maincolor"><b>comment[at]nouslescac.fr</b></span><br>
		</p>
	</div>
	
	<%= hidden_field :blog_post, :id %>

	<div class="field">
		<%= label_tag "Nom/Pseudo" %>
		<%= text_field_tag :from   %>
	</div> 

	<div class="field">
		<%= label_tag "Votre email (facultatif)" %>
		<%= email_field_tag :email %>
	</div> 

	<div class="field">
		<%= label_tag "Votre commentaire" %>
		<%= text_area_tag :content  %>
	</div> 

	<div class="actions">
		<%= submit_tag "Transmettre", class:"btn btn-xs",id: "comment_form_send" %>
	</div>
</form>